@model IEnumerable<Web.ViewModels.TaskViewModel>

<table class="table table-responsive-sm table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Prefijo</th>
            <th>Fecha de creación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Prefix</td>
            <td>@item.CreationDate</td>
            <td class="d-flex">
                <a class="btn btn-success mr-1" data-toggle="modal" data-target="#editarModal" onclick="loadEdit('@item.Id')">Editar</a>
                <a class="btn btn-danger" data-toggle="modal" data-target="#eliminarModal" onclick="loadDelete('@item.Id')">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>