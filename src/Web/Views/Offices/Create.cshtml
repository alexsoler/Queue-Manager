@model Web.ViewModels.OfficeViewModel

@{
    ViewData["Title"] = "Crear Officina";
}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-8 col-lg-7">
            <div class="card">
                <div class="card-header">
                    <strong>Crear Oficina</strong>
                </div>
                <div class="card-body">
                    <form id="FormCreate" method="post" class="form-horizontal" autocomplete="off">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="Name" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Name" class="form-control" placeholder="Ingrese un nombre..." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Description" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <textarea asp-for="Description" class="form-control" placeholder="Ingrese una descripcion...">
                                </textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <button type="submit" form="FormCreate" class="btn btn-primary"><i class="fa fa-dot-circle-o"></i> Crear</button>
                    <button type="reset" form="FormCreate" class="btn btn-danger"><i class="fa fa-ban"></i> Restablecer</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}