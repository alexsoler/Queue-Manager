@model IEnumerable<Web.ViewModels.DisplayMediaViewModel>

<ul id="listDisplay" class="list-group border shadow p-3 bg-light rounded">
    @foreach (var item in Model)
    {
    <li class="list-group-item list-group-item-action" data-order="@item.Order" data-id="@item.Id">
        <button class="btn btn-sm btn-pill btn-danger mr-3" onclick="RemoveMediaToDisplay(@item.Id, @item.IdMedia, this)"><i class="fa fa-remove"></i></button>
        @if (item.Tipo == "Video")
        {
            <i class="fa fa-file-video-o fa-lg text-warning"></i>
        }
        else if (item.Tipo == "Audio")
        {
            <i class="fa fa-file-audio-o fa-lg text-success"></i>
        }
        else if (item.Tipo == "Imagen")
        {
            <i class="fa fa-file-image-o fa-lg text-info"></i>
        }
        @item.Nombre
    </li>
    }
</ul>
