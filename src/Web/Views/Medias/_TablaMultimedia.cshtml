@model IEnumerable<Web.ViewModels.MediaViewModel>

<table class="table table-responsive-md table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th class="text-center">Usado</th>
            <th>Fecha de creación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    @if (item.Tipo == "Video")
                    {
                        <i class="fa fa-file-video-o fa-lg"></i>
                        @item.Tipo
                    }
                    else if (item.Tipo == "Audio")
                    {
                        <i class="fa fa-file-audio-o fa-lg"></i>
                        @item.Tipo
                    }
                    else if (item.Tipo == "Imagen")
                    {
                        <i class="fa fa-file-image-o fa-lg"></i>
                        @item.Tipo
                    }

                </td>
                <td class="text-center">
                    @if (!item.Used)
                    {
                        <i class="fa fa-times-circle fa-lg text-dark"></i>
                    }
                    else
                    {
                        <i class="fa fa-check-circle text-success"></i>
                    }

                </td>
                <td>@item.CreationDate</td>
                <td class="d-flex">
                    <a class="btn btn-primary mr-1" data-toggle="modal" data-target="#verModal" onclick="loadView('@item.Id', '@item.ContentType')">Ver</a>
                    <a class="btn btn-danger" data-toggle="modal" data-target="#eliminarModal" onclick="loadDelete('@item.Id')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

