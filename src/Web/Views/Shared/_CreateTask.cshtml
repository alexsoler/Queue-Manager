@model Web.ViewModels.TaskViewModel

<form id="FormCreateTask" asp-controller="Tasks" asp-action="Create" method="post" autocomplete="off" onsubmit="CrearTarea(event)">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Prefix" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <select asp-for="Prefix" asp-items="Html.GetEnumSelectList<Web.ViewModels.Prefix>()"
                    class="form-control"></select>
            <span asp-validation-for="Prefix" class="text-danger"></span>
        </div>
    </div>
</form>