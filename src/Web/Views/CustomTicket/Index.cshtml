    <link rel="stylesheet" href="~/lib/fontselect-jquery/styles/fontselect-alternate.css" />

    <style>
        .alert {
            position: fixed;
            min-width: 367px;
            margin-left: -183.5px;
            z-index: 100;
            left: 50%;
            top: 70px;
        }
