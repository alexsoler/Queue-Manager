@page
@model Web.Areas.Identity.Pages.Account.IndexModel
@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> Usuarios
                </div>
                <div id="divTabla" class="card-body">
                    <partial name="_TablaUsuarios" model="Model.UsuariosRoles" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="verModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
