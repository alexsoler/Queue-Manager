@model Web.ViewModels.OfficeEditViewModel

<form id="FormEdit" method="post" class="form-horizontal" autocomplete="off" onsubmit="EditarOficina(event)">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Office.Id" />
    <div class="form-group row">
        <label asp-for="Office.Name" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <input asp-for="Office.Name" class="form-control" placeholder="Ingrese un nombre..." />
            <span asp-validation-for="Office.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Office.Description" class="col-md-3 col-form-label"></label>
        <div class="col-md-9">
            <textarea asp-for="Office.Description" class="form-control" placeholder="Ingrese una descripcion...">
                                </textarea>
            <span asp-validation-for="Office.Description" class="text-danger"></span>
        </div>
    </div>
    <input type="hidden" asp-for="Office.CreationDate" />
    <div class="form-group row">
        <label asp-for="Office.Tasks" class="col-md-3 col-form-label"></label>
        <div class="col-md-9 col-form-label">
            @foreach (var item in Model.Tasks)
            {
                <div class="form-check custom-checkbox">
                    <input type="checkbox"
                           class="form-check-input"
                           name="Tareas"
                           value="@item.Id"
                           @(Html.Raw(item.Asignado ? "checked" : "")) />
                    <label class="form-check-label" for="Tareas">@item.Name</label>
                </div>
            }
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Office.Operators" class="col-md-3 col-form-label"></label>
        <div class="col-md-9 col-form-label">
            @foreach (var item in Model.Operators)
            {
                <div class="form-check custom-checkbox">
                    <input type="checkbox"
                           class="form-check-input"
                           name="Operadores"
                           value="@item.Id"
                           @(Html.Raw(item.Asignado ? "checked" : "")) />
                    <label class="form-check-label" for="Tareas">@item.Name</label>
                </div>
            }
        </div>
    </div>
</form>
