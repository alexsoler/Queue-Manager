@model IEnumerable<Web.ViewModels.MediaViewModel>

<ul id="listMedia" class="list-group border shadow p-3 bg-light rounded">
    @foreach (var item in Model)
    {
        <li class="list-group-item list-group-item-action">
            <button class="btn btn-sm btn-pill btn-primary mr-3" onclick="AddMediaToDisplay(@item.Id, this)"><i class="fa fa-plus"></i></button>
            @if (item.Tipo == "Video")
            {
                <i class="fa fa-file-video-o fa-lg text-warning"></i>
            }
            else if (item.Tipo == "Audio")
            {
                <i class="fa fa-file-audio-o fa-lg text-success"></i>
            }
            else if (item.Tipo == "Imagen")
            {
                <i class="fa fa-file-image-o fa-lg text-info"></i>
            }
            @item.Name
        </li>
    }
</ul>