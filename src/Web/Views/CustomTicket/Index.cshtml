                <div id="cardPrincipalBody" class="card-body">
                    <form id="FormEditTicket" method="post" onsubmit="EditTicketCustom(event)">
                        <div class="form-row">
                            <div class="form-group col-md-2 text-center">
                                <label asp-for="ShowLogo"></label><br />
